<%=
  form_for form, class: 'ui form' do
    div class: 'two fields' do
      div class: 'field' do
        label      :name
        text_field :name
      end

      div class: 'field' do
        values = Hash["Male" => "male", "Female" => "female"]

        label  :gender
        select :gender, values, class: "ui search dropdown"
      end
    end

    button class: 'ui labeled icon button add-moment' do
      i class: 'right plus icon'
      div "Add Moment"
    end

    div class: 'moments-fields' do
    end

    div class: 'field' do
      submit submit_label, class: 'ui teal button'
    end
  end
%>
