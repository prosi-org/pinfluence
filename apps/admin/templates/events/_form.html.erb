<%=
  form_for form, class: 'ui form' do
    div class: 'field' do
      label      :name
      text_field :name
    end

    fields_for_collection :moments do
      h4 'Moment', class: 'ui dividing header'

      div class: 'ui padded basic segment' do
        div class: 'two fields ' do
          div class: 'field' do
            label      'Date Begin'
            text_field :date_begin
          end

          div class: 'field' do
            label      'Date End'
            text_field :date_end
          end

          hidden_field :id
        end
      end
    end

    div class: 'field' do
      submit submit_label, class: 'ui teal button'
    end
  end
%>
