<%=
  form_for form, class: 'ui form' do
    hidden_field :id

    div class: 'two fields' do
      fields_for :influencer do
        div class: 'field' do
          label  "Influencer Type"
          select :type, Hash['Person', 'person'], class: "ui search dropdown"
        end

        div class: 'field' do
          label      "Name"

          values = Hash[influencers.collect { |i| [i.name, i.id] }]
          select :id, values, class: "ui search dropdown"
        end
      end
    end

    div class: 'two fields' do
      div class: 'field' do
        label      "Begin in"
        number_field :year_begin
      end

      div class: 'field' do
        label      "End in"
        number_field :year_end
      end
    end

    div class: 'two fields' do
      fields_for :locations do
        hidden_field :id, value: first_location_id

        div class: 'field' do
          label      "Location"
          text_field :address, value: first_location_address
        end

        div class: 'field' do
          label      "Density"
          values = Hash[(1..10).to_a.collect { |d| [d, d] }]
          select :density, values, options: { selected: first_location_density }, class: "ui search dropdown"
        end
      end
    end

    div class: 'field' do
      submit submit_label, class: 'ui teal button'
    end
  end
%>
