<%= render partial: 'moments/title' %>
<%= render partial: 'moments/menu' %>

<table class="ui celled padded center aligned table">
  <thead>
    <tr><th class="single line">Person</th>
    <th>Begin</th>
    <th>End</th>
    <th></th>
    <th></th>
  </tr></thead>
  <tbody>
    <% moments.each do |moment| %>
      <tr>
        <td><%= moment.influencer.name %></td>
        <td><%= moment.date_begin %></td>
        <td><%= moment.date_end %></td>
        <td>
          <a href="<%= routes.edit_moment_path(id: moment.id) %>" class="ui teal tiny button">Edit</a>
        </td>
        <td class="center aligned">
          <%=
            form_for :moment, routes.moment_path(id: moment.id), style: 'display: inline-block', method: :delete do
              submit 'Delete', { class: "ui red tiny button" }
            end
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
